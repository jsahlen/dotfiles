if &compatible
  set nocompatible
endif

" Initialize Vim-Plug
call plug#begin('~/.vim/bundle')

" GitHub bundles
Plug '907th/vim-auto-save'
Plug 'chriskempson/base16-vim'
Plug 'christoomey/vim-tmux-navigator'
Plug 'Galooshi/vim-import-js', { 'for': 'javascript', 'do': 'npm install -g import-js' }
Plug 'joker1007/vim-markdown-quote-syntax', { 'for': 'markdown' }
Plug 'junegunn/goyo.vim', { 'on': 'Goyo' }
Plug 'junegunn/vim-peekaboo'
Plug 'matze/vim-move'
Plug 'mhartington/oceanic-next'
Plug 'mhinz/vim-grepper', { 'on': ['Grepper', '<plug>(GrepperOperator)'] }
Plug 'mmalecki/vim-node.js', { 'for': 'javascript' }
Plug 'moll/vim-node', { 'for': 'javascript' }
Plug 'mustache/vim-mustache-handlebars', { 'for': ['html.handlebars', 'html.mustache'] }
Plug 'mxw/vim-jsx', { 'for': 'javascript.jsx' }
Plug 'mzlogin/vim-markdown-toc', { 'for': 'markdown' }
Plug 'othree/es.next.syntax.vim', { 'for': 'javascript' }
Plug 'othree/html5.vim', { 'for': 'html' }
Plug 'othree/javascript-libraries-syntax.vim', { 'for': 'javascript' }
Plug 'othree/yajs.vim', { 'for': 'javascript' }
Plug 'qpkorr/vim-bufkill'
Plug 'rhysd/clever-f.vim'
Plug 'SirVer/ultisnips'
Plug 'sjl/vitality.vim'
Plug 'SpaceVim/vim-markdown', { 'for': 'markdown' }
Plug 'ternjs/tern_for_vim', { 'do': 'npm install -g tern' }
Plug 'terryma/vim-multiple-cursors'
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-endwise'
Plug 'tpope/vim-eunuch'
Plug 'tpope/vim-fugitive'
Plug 'tpope/vim-git'
Plug 'tpope/vim-ragtag'
Plug 'tpope/vim-repeat'
Plug 'tpope/vim-sleuth'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-unimpaired'
Plug 'tpope/vim-vinegar'
Plug 'vim-airline/vim-airline'
Plug 'vim-ruby/vim-ruby', { 'for': 'ruby' }

if has("nvim")
  Plug 'neoclide/coc.nvim', { 'tag': '*', 'do': 'yarn install' }
  Plug 'neoclide/coc-eslint', { 'do': 'yarn install' }
  Plug 'neoclide/coc-highlight', { 'do': 'yarn install' }
  Plug 'neoclide/coc-snippets', { 'do': 'yarn install' }
  Plug 'neoclide/coc-css', { 'do': 'yarn install' }
  Plug 'neoclide/coc-html', { 'do': 'yarn install' }
  Plug 'neoclide/coc-json', { 'do': 'yarn install' }
  Plug 'neoclide/coc-solargraph', { 'do': 'yarn install' }
  Plug 'neoclide/coc-tsserver', { 'do': 'yarn install' }
endif

" fzf, if installed
if isdirectory($FZF_DIR)
  Plug $FZF_DIR
  Plug 'junegunn/fzf.vim'
endif

" Vim.org bundles
Plug 'vim-scripts/gitignore'
Plug 'vim-scripts/IndexedSearch'
Plug 'vim-scripts/L9'


" End Vim-Plug config
call plug#end()
