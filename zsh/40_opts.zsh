# Directories
setopt auto_cd
setopt auto_pushd
setopt pushd_minus
setopt pushd_ignore_dups
setopt pushd_to_home

# Enable corrections
setopt correct
setopt correct_all

# Auto remove ending slash when a space is entered
setopt auto_remove_slash

# Disable beeps
setopt no_beep
setopt no_list_beep
setopt no_hist_beep

# Confirmation for `rm *`
setopt rm_star_wait

# Auto-resume if executing command which matches backgrounded process
setopt auto_resume

# History
setopt append_history
setopt extended_history
setopt hist_expire_dups_first
setopt hist_ignore_dups
setopt hist_no_store
setopt hist_ignore_space
setopt hist_verify
setopt inc_append_history

# Misc
setopt auto_param_slash
setopt list_types
setopt auto_menu
setopt auto_param_keys
setopt interactive_comments
setopt magic_equal_subst
setopt complete_in_word
setopt always_to_end
setopt always_last_prompt
setopt globdots
